---
const { farmerData } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 shadow-md rounded-lg p-6 mt-10 text-center max-w-2xl mx-auto">
    <h2 class="text-2xl font-extrabold text-pacamara-dark dark:text-white mb-6">Informations sur {farmerData.title}</h2>
    <div class="flex flex-col items-center space-y-4">
      
            <img 
                src={farmerData.image.src} 
                alt={farmerData.title} 
                class="w-24 h-24 rounded-full object-cover shadow-lg mb-4" 
            />
       
        <div>
            <h3 class="text-xl font-semibold text-pacamara-dark dark:text-white pt-2">{farmerData.title}</h3>
            <p class="text-lg text-pacamara-accent dark:text-gray-300 mt-1 pt-2">{farmerData.intro}</p>
            <a href="tel:0667863727"><p class="text-lg text-pacamara-accent dark:text-gray-300 mt-1 pt-2"><span class="text-xl font-extrabold mt-1 pt-2">Num√©ro : </span>{farmerData.contact}</p></a>
            <p class="text-lg text-pacamara-accent dark:text-gray-300 mt-1 pt-2"> <span class="text-xl font-extrabold mt-1 pt-2">Adresse : </span> {farmerData.location}</p>
        </div>
    </div>
