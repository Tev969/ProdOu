---
const { farmerData } = Astro.props;
---
<div class="farmer-info mt-10 p-4 border rounded-lg bg-gray-100 dark:bg-gray-800">
    <h2 class="text-lg font-bold text-pacamara-dark dark:text-white">Informations sur l'agriculteur</h2>
    <div class="flex items-center mt-4">
      
        <div>
            <h3 class="text-md font-semibold text-pacamara-dark dark:text-white">{farmerData.title}</h3>
            <p class="text-sm text-pacamara-primary dark:text-gray-400">{farmerData.intro}</p>
            <p class="text-sm text-pacamara-accent dark:text-gray-300">{farmerData.contact}</p>
            <p>{farmerData.location}</p>
        </div>
    </div>
</div>
